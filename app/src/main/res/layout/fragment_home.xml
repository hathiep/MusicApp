<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="135dp"
    tools:context=".screen.homeFragment.HomeFragment">

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/border">

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:hint="@string/search_song"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:inputType="text"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/imv_delete"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imv_search"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_song"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_search"
        android:text="@string/no_song"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_search"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:divider="@null"
        android:dividerHeight="10dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="5dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_playing_collapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/border_corner"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imv_image_playing"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"
                app:shapeAppearanceOverlay="@style/Circle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Title of song"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/tv_artist"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Artist of song"
                            android:textSize="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imv_previous"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_previous"
                            android:layout_gravity="center_vertical"
                            android:text="Play"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/imv_play"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_play"
                            android:text="Play"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/imv_next"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_next"
                            android:text="Play"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/imv_cancel"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_delete"
                            android:text="Play"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="00:00"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingVertical="5dp"/>

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="00:00"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <ImageView
                        android:id="@+id/imv_repeat"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_unrepeat"
                        android:text="Repeat"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_playing_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/border_corner"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imv_pull_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_pull_down"
                android:visibility="visible"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title of song"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist of song"
                android:textSize="14dp"
                android:ellipsize="end"
                android:textAlignment="center"
                android:maxLines="1"
                tools:ignore="DuplicateIds" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imv_image_playing"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"
                app:shapeAppearanceOverlay="@style/Circle"
                tools:ignore="DuplicateIds" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imv_previous"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_previous"
                        android:text="Play"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        tools:ignore="DuplicateIds" />

                    <ImageView
                        android:id="@+id/imv_play"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_play"
                        android:text="Play"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        tools:ignore="DuplicateIds" />

                    <ImageView
                        android:id="@+id/imv_next"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_next"
                        android:text="Play"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="00:00"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:ignore="DuplicateIds" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingVertical="5dp"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="00:00"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Ngày phát hành: "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Thể loại: "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Album: "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Lời bài hát: "/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ViewSwitcher>


</RelativeLayout>