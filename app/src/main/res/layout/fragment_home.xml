<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="140dp"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_home"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:divider="@color/gray"
        android:dividerHeight="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@drawable/border_corner"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imv_pull_down"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pull_down"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imv_image_playing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Circle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Title of song"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imv_image_playing"
            app:layout_constraintEnd_toStartOf="@id/imv_previous"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Artist of song"
            android:textSize="14dp"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imv_image_playing"
            app:layout_constraintEnd_toStartOf="@id/imv_previous"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <!-- Action buttons on the right -->
        <ImageView
            android:id="@+id/imv_previous"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_previous"
            app:layout_constraintEnd_toStartOf="@id/imv_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_artist"/>

        <ImageView
            android:id="@+id/imv_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toStartOf="@id/imv_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_artist"/>

        <ImageView
            android:id="@+id/imv_next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_artist"/>

        <!-- SeekBar and Time TextViews on the bottom -->
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text="00:00"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_artist"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:max="100"
            app:layout_constraintStart_toEndOf="@id/tv_position"
            app:layout_constraintEnd_toStartOf="@id/tv_duration"
            app:layout_constraintTop_toBottomOf="@id/tv_artist"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:text="00:00"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@id/imv_next"
            app:layout_constraintTop_toBottomOf="@id/tv_artist"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>