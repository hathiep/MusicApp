<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_image"
        android:text="Song Title"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/notification_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_toEndOf="@id/notification_image"
        android:text="Artist"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"/>

    <SeekBar
        android:id="@+id/notification_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_artist"
        android:layout_toEndOf="@id/notification_image"
        android:layout_marginStart="8dp"
        android:max="100"/>

    <ImageView
        android:id="@+id/notification_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_seekbar"
        android:src="@drawable/ic_previous"/>

    <ImageView
        android:id="@+id/notification_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_previous"
        android:layout_below="@id/notification_seekbar"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_play"/>

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_play_pause"
        android:layout_below="@id/notification_seekbar"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_next"/>

</RelativeLayout>
